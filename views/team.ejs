<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="/css/team.css" />
    <link rel="stylesheet" href="/css/layout.css" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Team</title>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/xeicon@2.3.3/xeicon.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    
    
  </head>
  <body>
    <header>
      <%-include ('header.ejs')%>
    </header>

    <div class="body">
    
      <div class="top">
        <div class="top-box">
          <div class="text_wrap">
            <p>#<%= Object.values(team[0])[6] %></p>
            <h1>[<%= Object.values(team[0])[2] %>] <%= Object.values(team[0])[3] %></h1>
            <h2><%= Object.values(team[0])[1] %></h2>
          </div>
          <button id="button1" onclick="toggleConfetti();">
              <i class="like old-class"> <%= Object.values(team[0])[5] %></i>
              <!-- <i class="xi-heart-o">\ea11</i>
              <i class="xi-heart">\ea10</i> -->
          </button>
        </div>
      </div>


      <div class="contents">
          <iframe width="800" height="450" src=<%= Object.values(team[0])[7] %> frameborder="0" allowfullscreen></iframe>
          <iframe width="800" height="600" src=<%= Object.values(team[0])[8] %> frameborder="0"></iframe>
      </div>

    </div>

    <footer>
      <%-include ('footer.ejs')%>
    </footer>

    <script src="/js/confetti.js"></script>
<script> 
      var click = 0;
      $("#button1").click(function() {
        if (!click){//조아요 +1
          click = 1;
          $(".like").removeClass('old-class').addClass('new-class');
         
        }
        else{//-1
          click = 0;
          $(".like").removeClass('new-class').addClass('old-class')
        }

      });
    </script>
  </body>
</html>